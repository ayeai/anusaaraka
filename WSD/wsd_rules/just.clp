
;Added by human
(defrule just0
(declare (salience 5000))
(id-root ?id just)
?mng <-(meaning_to_be_decided ?id)
(id-word =(- ?id 1) has)
=>
(retract ?mng)
(assert (id-wsd_root_mng ?id aBI))
(if ?*debug_flag* then
(printout wsd_fp "(dir_name-file_name-rule_name-id-wsd_root_mng   " ?*wsd_dir* "  just.clp 	just0   "  ?id "  aBI )" crlf))
)

